{
  "name": "express-boilerplate",
  "description": "A project scaffold for use with Express.js",
  "keywords": [
    "express",
    "boilerplate",
    "skeleton"
  ],
  "homepage": "https://github.com/kunagpal/express-boilerplate",
  "bugs": {
    "url": "https://waffle.io/kunagpal/express-boilerplate"
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/.bin/forever ./bin/www",
    "stop": "node node_modules/.bin/forever stop ./bin/www",
    "restart": "node node_modules/.bin/forever restart ./bin/www",
    "security": "node node_modules/.bin/nsp check",
    "lint-css": "node node_modules/.bin/csslint public/stylesheets",
  	"lint-js": "node node_modules/.bin/eslint .",
	  "lint": "npm run lint-js && npm run lint-css",
	  "test-unit": "node node_modules/.bin/mocha --recursive",
    "test-structure": "node node_modules/.bin/mocha test/structure/* --recursive"
  },
  "contributors": [
    {
      "name": "Kunal Nagpal",
      "email": "kunagpal@gmail.com"
    }
  ],
  "dependencies": {
    "async": "2.0.1",
    "body-parser": "1.15.2",
    "clean-css": "3.4.19",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "csurf": "1.9.0",
    "debug": "2.2.0",
    "ejs": "2.5.1",
    "emailjs": "1.0.5",
    "express": "4.14.0",
    "express-session": "1.14.1",
    "forever": "0.15.2",
    "helmet": "2.1.2",
    "heroku-client": "3.0.0-beta3",
    "lodash": "4.14.1",
    "mongodb": "2.2.9",
    "morgan": "1.7.0",
    "passport": "0.3.2",
    "passport-facebook": "2.1.1",
    "passport-google-oauth2": "0.1.6",
    "raven": "0.12.1",
    "uglify-js": "2.7.3"
  },
  "devDependencies": {
    "csslint": "1.0.2",
    "dotenv": "2.0.0",
    "eslint": "3.4.0",
    "faker": "3.1.0",
    "istanbul": "0.4.5",
    "mocha": "3.0.1",
    "nsp": "2.6.1"
  },
  "optionalDependencies": {
    "bcrypt": "0.8.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kunagpal/express-boilerplate"
  },
  "license": "GPL-3.0+",
  "engines": {
    "node": "6.x"
  }
}
